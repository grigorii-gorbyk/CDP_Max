@helper MessageBox()
{
    if (ViewBag.Messages != null && ViewBag.Messages.Count > 0)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @foreach (var m in ViewBag.Messages)
            {
                <span>@m</span>
            }
        </div>
    }
    if (TempData["Messages"] != null && ((IEnumerable<string>)TempData["Messages"]).Count() > 0)
    {
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var m in (IEnumerable<string>)TempData["Messages"])
        {
            <span>@m</span>
        }
    </div>
    }
}

