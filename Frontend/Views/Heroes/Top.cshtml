@model IEnumerable<ScalabiltyHomework.Contracts.ReadModels.HeroView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>The best HEROs</h2>

<table class="table">
    <tr>
        <th></th>
        <th>Name</th>
        <th>Votes</th>
    </tr>

    @foreach (var item in Model.OrderByDescending(h => h.VotesCount).Take(10))
    {
        <tr>
            <td width="70px">
                <img src="@item.PersonPicture" class="avatar" alt="avatar" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VotesCount)
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" align="center"><br>You don't have HEROes yet. Please go to People section to promote yours.<br><br></td>
        </tr>
    }

</table>